{
  "manifest_version": 2,
  "name": "Project Security",
  "description": "Advanced Topics in Computer Security",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content.js"]
  }],
  "permissions": [
    "tabs",
    "activeTab",
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": "img/1.png",
    "default_popup": "popup.html"
  }
}